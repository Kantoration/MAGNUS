{
  "name": "auto-messager",
  "version": "1.0.0",
  "description": "Automated messaging system integrating Salesforce and Glassix",
  "type": "module",
  "main": "dist/run.js",
  "bin": {
    "automessager": "./dist/bin/automessager.js"
  },
  "scripts": {
    "build": "tsc",
    "build:cli": "npm run build",
    "start": "node dist/run.js",
    "dev": "tsx src/run.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:run": "vitest run",
    "lint": "eslint src test --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "verify:mapping": "tsx src/verify/mapping.verify.ts",
    "export:txt": "tsx scripts/export_repo_to_txt.ts",
    "export:src": "tsx scripts/export_repo_to_txt.ts --src-only",
    "export:tests": "tsx scripts/export_repo_to_txt.ts --with-tests",
    "export:all": "tsx scripts/export_repo_to_txt.ts",
    "smoke": "node dist/bin/automessager.js doctor && node dist/bin/automessager.js verify && node dist/bin/automessager.js verify:mapping",
    "cli:init": "tsx bin/automessager.ts init",
    "cli:verify": "tsx bin/automessager.ts verify",
    "cli:dry": "tsx bin/automessager.ts dry-run",
    "cli:run": "tsx bin/automessager.ts run",
    "package:win": "npm run build && pkg . --targets node20-win-x64 --output build/bin/automessager-win.exe",
    "package:mac": "npm run build && pkg . --targets node20-macos-x64 --output build/bin/automessager-mac",
    "release:check": "tsx scripts/release_check.ts",
    "release:clientkit": "tsx scripts/package_client_kit.ts"
  },
  "pkg": {
    "assets": [
      "dist/**/*.js",
      "dist/**/*.json"
    ],
    "targets": [
      "node20-win-x64",
      "node20-macos-x64"
    ],
    "outputPath": "build/bin"
  },
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.12",
    "axios": "^1.7.7",
    "axios-retry": "^4.5.0",
    "bottleneck": "^2.19.5",
    "commander": "^12.1.0",
    "dayjs": "^1.11.18",
    "dotenv": "^16.4.5",
    "jsforce": "^3.10.8",
    "libphonenumber-js": "^1.12.23",
    "p-map": "^7.0.3",
    "pino": "^9.4.0",
    "pino-pretty": "^13.1.1",
    "prom-client": "^15.1.3",
    "prompts": "^2.4.2",
    "xlsx": "^0.18.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/node": "^20.16.10",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.57.1",
    "pkg": "^5.8.1",
    "prettier": "^3.3.3",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "vitest": "^2.1.2"
  }
}
